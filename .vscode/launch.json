{
  "version": "0.2.0",
  "configurations": [
  {
    "name": "API .NET Core Launch (web)",
    "type": "coreclr",
    "request": "launch",
    "preLaunchTask": "build",
    "program": "${workspaceFolder}/GitInsight.Api/bin/Debug/net6.0/GitInsight.Api.dll",

    "args": [],
    "cwd": "${workspaceFolder}/GitInsight.Api",
    "stopAtEntry": false,
    "env": {
      "ASPNETCORE_ENVIRONMENT": "Development"
    },
    "sourceFileMap": {
      "/Views": "${workspaceFolder}/Views"
    }
  },
    {
      "name": "Launch .NET Core in Docker",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "netCore": {
        "appProject": "${workspaceFolder}/GitInsight/GitInsight.csproj",
        "enableDebugging": true
      }
    },
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/GitInsight/bin/Debug/net6.0/GitInsight.dll",
      "args": [],
      "cwd": "${workspaceFolder}/GitInsight",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Docker .NET Core Launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "netCore": {
        "appProject": "${workspaceFolder}/GitInsight/GitInsight.csproj",
        "enableDebugging": true,
        "configureSsl": true
      }
    },
    {
      "name": "Docker .NET Core Launch(RUN)",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "netCore": {
        "appProject": "${workspaceFolder}/GitInsight/GitInsight.csproj"
      }
    }
  ]
}
